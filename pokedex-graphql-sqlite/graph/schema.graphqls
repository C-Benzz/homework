# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Pokemon {
  name: String!
  description: String!
  category: String!
  type: [PokemonType!]!
  abilities: [String!]!
}

enum PokemonType{
  Bug
  Flying
  Fire
  Grass
  Water
  Poison
}

input NewPokemon{
  name: String!
  description: String!
  category: String!
  type: [PokemonType!]!
  abilities: [String!]!
}

input UpdatePokemon{
  name: String
  description: String
}

type Query{
  Allpokemon:[Pokemon!]
}

type Mutation {
  Create(input: NewPokemon!): Pokemon
  Update(input: UpdatePokemon!): Pokemon
  Delete(name:String!): Boolean!
}