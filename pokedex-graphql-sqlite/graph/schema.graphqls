# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Pokemon {
  name: String!
  description: String
  type: [PokemonType!]!
}

type PokemonType{
  category: String!
  abilities: [String]
}

input NewPokemon{
  name: String
  description: String!
}

type Query{
  Allpokemon:[Pokemon!]
}

type Mutation {
  Create(input: NewPokemon!): Pokemon
  Update(input: NewPokemon!): Pokemon
  Delete(name:String!): Boolean
}